        title Doctrack | Documents

    body.files.body
        - if (user.role === 'admin')
            include nav1
                .container.order1
                        li
                        h34 #{file.user.name}
                        //- li
                        //- h35.date ORDER##{file._id}
                        li
                        h34.cust-name ORDER##{file._id}
                        h35.date Date of order: #{moment(file.createdAt).format('hh:mm A')}
                        ul
                        //- h34 ORDER##{file._id}
                        //- //- li
                        //- h35.date Date of order: #{moment(file.createdAt).format('hh:mm A')}
                        //- ul
                            
                        .header.order
                        
                        .row.dets 
                            .col-2
                                //- h35 Order Number:
                                //- li
                                //- h35 Date of Order:    
                                //- li
                                h35 Order Status: 
                                li
                                h35 Time of Pick-up: 
                                li
                                h35 Mode of Payment: 
                                li
                                h35 Quantity of Page/s: 
                                li

                            .col-2
                                //- h35.text1 123456
                                //- li
                                //- h35.text1 6/8/2022
                                li
                                h35.text1 #{file.status}
                                li
                                h35.text1 #{file.pickup}
                                
                                li
                                //- h35.text1 #{proof.paymode}
                                li
                                h35.text1 #{file.pages}
                                li

                            .col-2
                                h35 Type of Paper:
                                li
                                h35 Size of Paper:
                                li
                                h35 Page Side: 
                                li
                                h35 Orientation:
                                li
                                

                            .col-2
                                h35#type.text1= `${file.type.slice(0, 1).toUpperCase()}${file.type.slice(1)} Paper`
                                li
                                h35#size.text1 #{file.size}
                                li
                                h35#side.text1= file.side === 'front' ? 'Front' : 'Front & Back'
                                li
                                h35#orientation.text1 #{file.orientation}
                                li
                                

                            .col-2
                                h35 Color:
                                li
                                h35 Number of Copies: 
                                li
                                h35 Filename:
                                
                                    

                            .col-2
                                h35.text1= file.color === 'b&w' ? 'Black & White' : 'Colored'
                                li
                                h35.text1 #{file.copies}
                                li
                                h35.text1 #{file.namefile}
                                li

                            ul
                            h35.note2 Note: 
                                h35.note #{file.note}

                            //- h1 Proof of payment: 
                            //- img(src=`/img/proofs/${proof.payment}`, alt='Proof of payment')

                        hr 

                        .container.ordersum
                                        div.OrderSummary2
                                            div.header
                                                h27 Order Summary 
                                            table.table-bordered
                                                thead 
                                                    tr 
                                                        th(class="w-60") File
                                                        th(class="w-20") Price
                                                        //- Price = paper + color
                                                        th(class="w-20") Qty of Pages
                                                        th(class="w-20") Number of Copies
                                                        th(class="w-20") Paper's side
                                                        //- Front side = x1, front&back = x2
                                                        th(class="w-20") Total

                                                    tr 
                                                        td #{file.namefile}
                                                        td= `Php ${file.price.toFixed(2)}`
                                                        td #{file.pages}
                                                        td x#{file.copies}
                                                        td= file.side === 'front' ? 'Front' : 'Front & Back'
                                                        td= `Php ${file.totalPrice.toFixed(2)}`

                                                    //- tr 
                                                    //-     td(colspan="5") Total 
                                                    //-     td Php 400
                        
                        ul
                        div(style="display: flex; justify-content: flex-end;")
                            a(href=`/viewproof/${proof._id}` class="proofbutton") Proof of Payment
                        li
                        a.back2(href='/documents' class='previous') &#8249; Back to Files
                        button.dl--btn.next(class='downloadinv' type='submit') Download

        script
            include script.js
