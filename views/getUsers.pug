        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
        title Doctrack | Documents

    body
        include nav1
            main#site-main
                .container2
                    .box-nav.d-flex.justify-between
                    form
                        table.table
                            thead.thead-dark 
                                tr 
                                    th 
                                    th NAME 
                                    th EMAIL 
                                    th NUMBER 
                                    th 
                            tbody 
                                each user in users 
                                    tr
                                        td.getpic(class="w-60")
                                            img(src=`/img/users/${user.photo}`, alt='User photo')
                                        td(class="w-60")= user.name
                                        td(class="w-60")= user.email
                                        td(class="w-20")= user.contact
                                        td(class="w-20")
                                         
                                            div(class="deleteuser")
                                                input(type="checkbox" id="click-btndel")
                                                label(for="click-btndel", class="click-me") Delete 
                                                div(class="userdel")
                                                    div(class="userheader")
                                                        h22 Delete User 
                                                        label(for="click-btndel", class="fas fa-times")
                                                    li
                                                    h23 Are you sure you want to delete this user?
                                                    div(class="line")
                                                    label(for="click-btndel", class="no-btn") No
                                                    label.delete--acc(for="click-btndel", class="yes-btn") Yes

                                            //- button.del(style="text-decoration: none;color: #A02525;") Delete

        script
            include script.js
