doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pridi&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/3f396099dd.js' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | Login

    body
        .row.no-gutters
            .col-md-6.no-gutters
                .leftSide1.nth-of-type(1)
                    .overlay1
                    .container1
                        span.text1 Welcome to
                        span.text2 DocTrack
                        h4 Let's Get Started

            .col-md-6.no-gutters
                .rightSide1.nth-of-type(2)
                    .container1
                        h3 LOG IN
                        h6 Login to access your account
                        form.form.form--login.needs-validation(novalidate)
                            .d-grid.col-6.mx-auto
                                .form-floating.mb-1
                                    input#email.form-control(type='email', placeholder='name@example.com', required)
                                    label(for='floatingInput') Email address
                                    .invalid-feedback Please provide an email address.
                                .form-floating.mb-1
                                    input#password.form-control(type='password', placeholder='Password', autocomplete="current-password", required, minlength='8',)
                                    label(for='floatingPassword') Password
                                    i(class="fa fa-eye password-show" id="togglePassword")
                                    .invalid-feedback Please provide a password.
                                .form-check.mb-4
                                    input.form-check-input(type='checkbox' id='inlineFormCheck')
                                    label.form-check-label(for='inlineFormCheck') Keep me logged in
                                .form-check.mb-4
                                    a.fp(href='/forgot-password' class='forgotpw') Forgot Password?
                                    
                                button.button1.btn.btn-primary.btn-lg(role='button', style='margin-top: 30px') LOG IN

                                h33.log Don't have an account? 
                                    a.log(href='/register' class='log') Register
                                    
