doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='css/style.css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pridi:wght@300&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/3f396099dd.js' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | Products

    body.body
        include nav1
            form.upd--prods
                .container
                    .price-title
                        //- .upd--prods
                        h14.paperproducts Plain Bond Paper
                        hr
                    div(class='box-container')
                        each product, index in plainPapers
                            div(class='box')
                                div(class='image')
                                    img(src=`../img/${product.name.toLowerCase()}.png`)
                                div(class='p-content')
                                    h5= product.name
                                    li
                                    h6 Price: 
                                        input.editprice(type='number' id=`plainPrice-${index}` value=product.price)
                                    h6.add For colored print
                                    h6(style="margin-right:45px") Additional: 
                                        input.editprice(type='number' id=`plainAdditional-${index}` value=product.additional)
                                    hr
                                    h6 Stocks: 
                                        input.stocks(type='number' id=`plainStocks-${index}` value=product.stocks)
                        
                    .price-title
                        h14.paperproducts Glossy Paper
                        hr
                    div(class='box-container')
                        each product, index in glossyPapers
                            div(class='box')
                                div(class='image')
                                    img(src=`../img/${product.name.toLowerCase()}.png`)
                                div(class='p-content')
                                    h5= product.name
                                    li
                                    h6 Price: 
                                        input.editprice(type='number' id=`glossyPrice-${index}` value=product.price)
                                    h6.add For colored print
                                    h6(style="margin-right:45px") Additional: 
                                        input.editprice(type='number' id=`glossyAdditional-${index}` value=product.additional)
                                    hr
                                    h6 Stocks: 
                                        input.stocks(type='number' id=`glossyStocks-${index}` value=product.stocks)

                    .price-title
                        h14.paperproducts Laser Paper
                        hr

                    div(class='box-container')
                        each product, index in laserPapers
                            div(class='box')
                                div(class='image')
                                    img(src=`../img/${product.name.toLowerCase()}.png`)
                                div(class='p-content')
                                    h5= product.name
                                    li
                                    h6 Price: 
                                        input.editprice(type='number' id=`laserPrice-${index}` value=product.price)
                                    h6.add For colored print
                                    h6(style="margin-right:45px") Additional: 
                                        input.editprice(type='number' id=`laserAdditional-${index}` value=product.additional)
                                    hr
                                    h6 Stocks: 
                                        input.stocks(type='number' id=`laserStocks-${index}` value=product.stocks)
                    button.updateProd(role='button') Update
        script
            include script.js

        //- script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.min.js')
        //- script(src='/js/login.js')
        script(src='/js/bundle.js')