        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | Register

    body
        .row.no-gutters
            .col-md-6.no-gutters
                .leftSide1.nth-of-type(1)
                    .overlay1
                    .container1
                        span.text1 Welcome to 
                        span.text2 DocTrack
                        h4 Create an account.

            .col-md-6.no-gutters
                .rightSide1.nth-of-type(2)
                    .container1
                        h3 REGISTER
                        h6 Please fill in the form to continue
                        form.form.form--register.needs-validation(novalidate)
                            .d-grid.col-6.mx-auto
                                .form-floating.mb-1
                                    input#name.form-control(type='name' placeholder='Firstname, Lastname' required)
                                    label(for='floatingInput') Name
                                    .invalid-feedback Please input first and last name.
                                .form-floating.mb-1
                                    input#contact.form-control(type='contact' placeholder='+63(XXX)YYYZZZZ' required)
                                    label(for='floatingInput') Contact number
                                    .invalid-feedback Please provide a valid contact number.
                                .form-floating.mb-1
                                    input#email.form-control(type='email' placeholder='name@example.com' required)
                                    label(for='floatingInput') Email address
                                    .invalid-feedback Please provide an email address.
                                .form-floating.mb-1
                                    input#password.form-control(type='password' class="pw-inputcontrol", placeholder='Password', required, minlength='8')
                                    label(for='floatingPassword') Password
                                    //- New
                                    i(class="far fa-eye password-show" id="togglePassword")


                                    .invalid-feedback Please provide a password.
                                .form-floating.mb-1
                                    input#passwordConfirm.form-control(type='password' class="pw-inputcontrol", placeholder='Password', required, minlength='8')
                                    label(for='floatingPassword') Confirm Password
                                    //- New
                                    i(class="fa fa-eye password-show" id="togglePasswordConfirm")
                                    .invalid-feedback Please confirm your password.
                                .form-check.mb-4
                                    input.form-check-input(type='checkbox' value='' id='invalidCheck' required)
                                    label.form-check-label(for='invalidCheck') I agree with the  
                                    a.tc2(href='/terms&condition1' class='termsncondi') Terms and Conditions
                                    .invalid-feedback You must agree before submitting.
                                button.button1.btn.btn-primary.btn-lg(role='button' style='margin-top: 30px') REGISTER

                                //- New
                                h33.reg Already have an account? 
                                    a.log(href='/login' class='log')  Login

        //- script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.min.js')
        //- script(src='/js/register.js')
        script(src='/js/bundle.js')