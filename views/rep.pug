    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pridi:wght@300&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/3f396099dd.js' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | Documents

    body.files.body
        - if (user.role === 'admin')
            include nav1
                .container.order 
                    h36 ORDER SUMMARY REPORT
                    li
                    h37 ALL ORDERS
                    hr
                    table(width="100%")
                        thead
                            tr 
                                th(class="w-60") ORDER ID
                                th(class="w-60") CUSTOMER NAME
                                th(class="w-20") ORDER DATE
                                th(class="w-30") PAYMENT STATUS
                                th(class="w-20") ORDER STATUS
                                th(class="w-20") AMOUNT
                        tbody 
                            each file in files
                                tr 
                                    td #{file._id}
                                    td= file.user.name
                                    td= moment(user.createdAt).format('YYYY-MM-DD')
                                    td #{file.stats}
                                    td #{file.status}
                                    td= `Php ${file.totalPrice.toFixed(2)}`

                    //- button.dl--btn.next(class='downloadinv' type='submit' style='margin-top:50px') Download

        script
            include script.js
