doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pridi:wght@300&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/3f396099dd.js' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | Reset Password

    body
        .row.no-gutters
            .col-md-6.no-gutters
                .leftSide1.nth-of-type(1)
                    .overlay1
                    .container1
                        span.text1 Welcome to
                        span.text2 DocTrack
                        h4 Let's Get Started

            .col-md-6.no-gutters
                .rightSide1.nth-of-type(2)
                    .container1
                        h3 Reset Password
                        h6 Please enter a new password.
                        form.form.reset--pass.needs-validation(novalidate)
                            .d-grid.col-6.mx-auto
                                .form-floating.mb-1
                                    input#password.form-control(type='password' class="pw-inputcontrol", placeholder='Password', required, minlength='8')
                                    label(for='floatingPassword') Password
                                    
                                    i(class="fa fa-eye-slash  password-show")
                                    .invalid-feedback Please provide a password.
                                .form-floating.mb-1
                                    input#passwordConfirm.form-control(type='password' class="pw-inputcontrol", placeholder='Password', required, minlength='8')
                                    label(for='floatingPassword') Confirm Password
                                   
                                    i(class="fa fa-eye-slash  password-show")
                                    .invalid-feedback Please confirm your password.
                                    
                                button.reset--pass.log1(role='button' type='submit') SAVE PASSWORD
                                
        script
            include script.js
        //- script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.min.js')
        //- script(src='/js/login.js')
        script(src='/js/bundle.js')