doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pridi:wght@300&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/3f396099dd.js' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | User Profile

    body
        - if (user.role === 'user')
            include nav
                //- WITHOUT API
                //- form.container.form-user-data(action='/submit-user-data' method='POST')

                //- WITH API
                form.container.form-user-data
                    .row
                        .col-md-5
                            div(class='box-container')
                                div(class='image_profile')
                                    img(src=`/img/users/${user.photo}`, alt='User photo')
                                div(class='text-center')
                                    input.form__upload(type='file', accept='image/*', id='photo', name='photo' hidden)
                                    label(id='custom-btn' for='photo') Change Photo
                    div(class='row')
                        div(class='col-5 left')
                            label.form_label(for='name') Name
                            input#name.form-control(type='text', class='input', value=`${user.name}`, required, name='name')
                            label.form_label(for='email') Email Address
                            input#email.form-control(type='text', class='input', value=`${user.email}`, required, name='email')
                        div(class='col-2')
                        div(class='col-5 right')
                            label.form_label(for='contact') Contact Number
                            input#contact.form-control(type='text', class='input', value=`${user.contact}`, name='contact')
                            h7 Date of Birth
                            input.form-control(type='date' id='datepicker' value='01/02/1999')
                            button.button4.btn.btn-primary.btn-lg(role='button') Update
                            a.button5.btn.btn-primary.btn-lg(href='/user-profile' id='cancel' name='cancel') Cancel
                            //- a.button6.btn.btn-primary.btn-lg(href='/change-pass') Change Password
        - if (user.role === 'admin')
            include nav1
                //- WITHOUT API
                //- form.container.form-user-data(action='/submit-user-data' method='POST')

                //- WITH API
                form.container.form-user-data
                    .row
                        .col-md-5
                            div(class='box-container')
                                div(class='image_profile')
                                    img(src=`/img/users/${user.photo}`, alt='User photo')
                                div(class='text-center')
                                    input.form__upload(type='file', accept='image/*', id='photo', name='photo' hidden)
                                    label(id='custom-btn' for='photo') Change Photo
                    div(class='row')
                        div(class='col-5 left')
                            label.form_label(for='name') Name
                            input#name.form-control(type='text', class='input', value=`${user.name}`, required, name='name')
                            label.form_label(for='email') Email Address
                            input#email.form-control(type='text', class='input', value=`${user.email}`, required, name='email')
                        div(class='col-2')
                        div(class='col-5 right')
                            label.form_label(for='contact') Contact Number
                            input#contact.form-control(type='text', class='input', value=`${user.contact}`, name='contact')
                            h7 Date of Birth
                            input.form-control(type='date' id='datepicker' value='01/02/1999')
                            button.button4.btn.btn-primary.btn-lg(role='button') Update
                            a.button5.btn.btn-primary.btn-lg(href='/user-profile' id='cancel' name='cancel') Cancel
                            //- a.button6.btn.btn-primary.btn-lg(href='/change-pass') Change Password

        script
            include script.js
        
