html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Pridi:wght@300&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/3f396099dd.js' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        title Doctrack | Documents

    body.files
        - if (user.role === 'user')
            include nav
                .container.proofp
                    h1.proofp Mode of Payment:
                    - if (proof.paymentMethod === 'gcash')
                        h2.proofp GCash
                    - else
                        h2.proofp Paymaya
                    h1.proofp Proof of Payment: 
                    //- hr
                    img.proofimgprev(src=`/img/proofs/${proof.payment}`, alt='Proof of payment')
                    li
                    a.back2(href='/documents' class='previous') &#8249; Back

        - if (user.role === 'admin')
            include nav1
                .container.proofp
                    h1.proofp Mode of Payment: 
                    - if (proof.gcash)
                        h2.proofp GCash
                    - else (proof.paymaya)
                        h2.proofp Paymaya
                    h1.proofp Proof of Payment: 
                    hr
                    img.proofimgprev(src=`/img/proofs/${proof.payment}`, alt='Proof of payment')
                    li
                    a.back2(href='/documents' class='previous') &#8249; Back

        script
            include script.js
        //- script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.min.js')
        //- script(src='/js/login.js')
        script(src='/js/bundle.js')